[Unit]
After=vpnns-namespace.service
Requires=vpnns-namespace.service
Wants=network-pre.target
Before=network-pre.target

[Service]
Type=oneshot
RemainAfterExit=yes
# tun interface is initially created in the default network namespace
ExecStart=@BINDIR@/ip netns exec @vpnnetns@ openvpn --mktun --dev @openvpniface@ --dev-type tun --user @openvpnuser@ --group @openvpngroup@
# Sysctl settings area already set by default dependency sysinit.target
#ExecStart=@PKGLIBDIR@/ifaceapplycommonsysctls.sh @openvpniface@
ExecStart=@BINDIR@/ip netns exec @vpnnetns@ sysctl -w "net.ipv6.conf.@openvpniface@.disable_ipv6=1"
ExecStop=@BINDIR@/ip netns exec @vpnnetns@ openvpn --rmtun --dev @openvpniface@
